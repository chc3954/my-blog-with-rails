<% content_for :title, "About" %>

<div class="from-background to-background/80 min-h-screen bg-gradient-to-b">
  <div class="container py-12">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-[200px_1fr] md:gap-8">
      <!-- Left Sidebar - Desktop -->
      <div class="hidden md:block">
        <div class="sticky top-[var(--sticky-top)] space-y-6">
          <div class="mb-8">
            <h1 class="from-primary to-primary/60 bg-gradient-to-r bg-clip-text text-4xl font-bold text-transparent">
              Hyunchul Cho
            </h1>
            <p class="text-muted-foreground mt-2">Software Developer</p>
          </div>
          <nav class="space-y-2">
            <% @menu_items.each do |item| %>
            <a href="#<%= item[:id] %>" class="group hover:bg-primary/10 flex w-full items-center gap-3 rounded-xl px-4 py-3 text-left transition-all">
              <span class="text-xl transition-transform group-hover:scale-110">
                <%= item[:icon] %>
              </span>
              <span class="font-medium"><%= item[:label] %></span>
            </a>
            <% end %>
          </nav>
        </div>
      </div>

      <!-- Main Content -->
      <div class="space-y-16">
        <!-- Mobile Navigation -->
        <div class="md:hidden">
          <div class="mb-8">
            <h1 class="from-primary to-primary/60 bg-gradient-to-r bg-clip-text text-4xl font-bold text-transparent">
              Hyunchul Cho
            </h1>
            <p class="text-muted-foreground mt-2">Software Developer</p>
          </div>
          <nav class="grid grid-cols-2 gap-2">
            <% @menu_items.each do |item| %>
            <a href="#<%= item[:id] %>" class="group hover:bg-primary/10 flex items-center gap-3 rounded-xl px-4 py-3 text-left transition-all">
              <span class="text-xl transition-transform group-hover:scale-110">
                <%= item[:icon] %>
              </span>
              <span class="font-medium"><%= item[:label] %></span>
            </a>
            <% end %>
          </nav>
        </div>

        <!-- Profile Section -->
        <section id="profile" class="scroll-mt-[var(--header-height)] space-y-4">
          <p class="text-muted-foreground text-lg leading-relaxed">
            <%= @content[:profile][:description] %>
          </p>
        </section>

        <!-- Skills Section -->
        <section id="skills" class="scroll-mt-[var(--header-height)] space-y-6">
          <h2 class="text-2xl font-semibold"><%= @content[:skills][:title] %></h2>
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <% @content[:skills][:categories].each do |category| %>
            <div class="space-y-3">
              <h3 class="text-primary font-medium"><%= category[:name] %></h3>
              <div class="flex flex-wrap gap-2">
                <% category[:items].each do |skill| %>
                <span class="bg-primary/10 text-primary rounded-full px-3 py-1 text-sm">
                  <%= skill %>
                </span>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </section>

        <!-- Experience Section -->
        <section id="experience" class="scroll-mt-[var(--header-height)] space-y-6">
          <h2 class="text-2xl font-semibold"><%= @content[:experience][:title] %></h2>
          <% @content[:experience][:items].each do |exp| %>
          <div class="bg-card/30 space-y-4 rounded-xl p-6">
            <div class="flex flex-col gap-2 sm:flex-row sm:justify-between">
              <div>
                <h3 class="text-xl font-medium"><%= exp[:role] %></h3>
                <p class="text-primary"><%= exp[:company] %></p>
              </div>
              <span class="text-muted-foreground"><%= exp[:period] %></span>
            </div>
            <ul class="space-y-2">
              <% exp[:achievements].each do |achievement| %>
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1.5">â€¢</span>
                <span><%= achievement %></span>
              </li>
              <% end %>
            </ul>
          </div>
          <% end %>
        </section>

        <!-- Projects Section -->
        <section id="projects" class="scroll-mt-[var(--header-height)] space-y-6">
          <h2 class="text-2xl font-semibold"><%= @content[:projects][:title] %></h2>
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <% @content[:projects][:items].each do |project| %>
            <div class="group border-border bg-card/30 hover:border-primary/50 hover:bg-card/50 rounded-xl border p-6 transition-all">
              <div class="mb-4 flex items-center justify-between">
                <% if project[:url] %>
                <a href="<%= project[:url] %>" target="_blank" class="hover:underline">
                  <h3 class="font-medium"><%= project[:name] %></h3>
                </a>
                <% else %>
                <h3 class="font-medium"><%= project[:name] %></h3>
                <% end %>
                <span class="text-primary/80 text-sm"><%= project[:status] %></span>
              </div>
              <p class="text-muted-foreground mb-4 text-sm"><%= project[:description] %></p>
              <div class="flex flex-wrap gap-2">
                <% project[:tech].each do |tech| %>
                <span class="bg-primary/5 text-primary rounded-full px-2 py-0.5 text-xs">
                  <%= tech %>
                </span>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="scroll-mt-[var(--header-height)] space-y-6">
          <h2 class="text-2xl font-semibold"><%= @content[:contact][:title] %></h2>
          <div class="bg-card/30 rounded-xl p-6">
            <div class="space-y-4">
              <a href="mailto:<%= @content[:contact][:email] %>" class="text-primary flex items-center gap-3 hover:opacity-80">
                <span>ðŸ“§</span> <%= @content[:contact][:email] %>
              </a>
              <a href="tel:<%= @content[:contact][:phone] %>" class="text-primary flex items-center gap-3 hover:opacity-80">
                <span>ðŸ“ž</span> <%= @content[:contact][:phone] %>
              </a>
              <a href="https://<%= @content[:contact][:linkedin] %>" target="_blank" rel="noopener noreferrer" class="text-primary flex items-center gap-3 hover:opacity-80">
                <span>ðŸ’¼</span> <%= @content[:contact][:linkedin] %>
              </a>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>