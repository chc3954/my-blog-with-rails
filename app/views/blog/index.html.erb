<% content_for :title, "Blog" %>

<div class="from-background to-background/80 min-h-screen bg-gradient-to-b">
  <div class="container py-12">
    <!-- Turbo Frame with Lazy Loading -->
    <turbo-frame id="blog_feed" src="<%= blog_feed_path(tag: params[:tag]) %>" loading="lazy">
      <!-- SKELETON LOADER -->
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 animate-pulse">

        <!-- Left Sidebar Skeleton -->
        <div class="hidden lg:block lg:col-span-1">
          <div class="space-y-4">
            <div class="h-6 w-20 bg-muted rounded"></div>
            <div class="bg-card/30 rounded-xl p-4 border border-border space-y-2">
              <div class="h-8 w-full bg-muted/50 rounded-lg"></div>
              <div class="h-8 w-full bg-muted/50 rounded-lg"></div>
              <div class="h-8 w-full bg-muted/50 rounded-lg"></div>
              <div class="h-8 w-full bg-muted/50 rounded-lg"></div>
            </div>
          </div>
        </div>

        <!-- Center Feed Skeleton -->
        <div class="lg:col-span-2 space-y-8">
          <div class="h-10 w-40 bg-muted rounded"></div>

          <div class="space-y-8">
            <!-- Skeleton Card 1 -->
            <div class="bg-card/30 rounded-2xl overflow-hidden border border-border h-[400px]">
              <div class="h-[200px] bg-muted/50 w-full"></div>
              <div class="p-6 space-y-4">
                <div class="h-4 w-20 bg-muted/50 rounded-full"></div>
                <div class="space-y-2">
                  <div class="h-8 w-3/4 bg-muted/50 rounded"></div>
                  <div class="h-4 w-full bg-muted/50 rounded"></div>
                  <div class="h-4 w-2/3 bg-muted/50 rounded"></div>
                </div>
              </div>
            </div>
            <!-- Skeleton Card 2 -->
            <div class="bg-card/30 rounded-2xl overflow-hidden border border-border h-[400px]">
              <div class="h-[200px] bg-muted/50 w-full"></div>
              <div class="p-6 space-y-4">
                <div class="h-4 w-20 bg-muted/50 rounded-full"></div>
                <div class="space-y-2">
                  <div class="h-8 w-3/4 bg-muted/50 rounded"></div>
                  <div class="h-4 w-full bg-muted/50 rounded"></div>
                  <div class="h-4 w-2/3 bg-muted/50 rounded"></div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Sidebar Skeleton -->
        <div class="hidden lg:block lg:col-span-1">
          <div class="bg-card/30 border border-border rounded-xl p-6 h-[250px] flex flex-col items-center gap-4">
            <div class="w-24 h-24 bg-muted/50 rounded-full"></div>
            <div class="h-6 w-32 bg-muted/50 rounded"></div>
            <div class="h-4 w-24 bg-muted/50 rounded"></div>
          </div>
        </div>

      </div>
    </turbo-frame>
  </div>
</div>